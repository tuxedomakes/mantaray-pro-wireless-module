#include <dt-bindings/zmk/matrix_transform.h>
#include "mantaray_pro_wireless-layouts.dtsi"
#include <dt-bindings/pinctrl/nrf-pinctrl.h>

/* Pin Control for custom nice!view SPI pins */
&pinctrl {
    spi1_default: spi1_default {
        group1 {
            // MOSI = D10 -> P1.15, SCK  = D8 -> P1.13
            psels = <NRF_PSEL(SPIM_MOSI, 1, 15)>,
                    <NRF_PSEL(SPIM_SCK, 1, 13)>;
        };
    };
    spi1_sleep: spi1_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 1, 15)>,
                    <NRF_PSEL(SPIM_SCK, 1, 13)>;
            low-power-enable;
        };
    };
};

/*
 * SPI peripheral configuration for the nice!view.
 * The label 'nice_view_spi' MUST be applied directly to the bus itself.
 */
nice_view_spi: &spi1 {
    compatible = "nordic,nrf-spim";
    status = "okay";

    /* Apply the custom pin control configuration defined in &pinctrl */
    pinctrl-0 = <&spi1_default>;
    pinctrl-1 = <&spi1_sleep>;
    pinctrl-names = "default", "sleep";

    /* CS = D9 */
    cs-gpios = <&xiao_d 9 GPIO_ACTIVE_HIGH>;
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &physical_layout0;
    };

    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)    RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)    RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)    RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)    RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
                                            RC(4,4) RC(4,5)    RC(4,6) RC(4,7)
        >;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        wakeup-source;
        diode-direction = "col2row";
        row-gpios
            = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
        col-gpios
            = <&gpio0 15 GPIO_ACTIVE_HIGH> // D11
            , <&gpio0 19 GPIO_ACTIVE_HIGH> // D12
            , <&gpio1 1 GPIO_ACTIVE_HIGH> //D13
            , <&gpio0 9 GPIO_ACTIVE_HIGH> // D14
            , <&gpio0 10 GPIO_ACTIVE_HIGH> // D15
            , <&xiao_d 7 GPIO_ACTIVE_HIGH>
            ;
    };

};
